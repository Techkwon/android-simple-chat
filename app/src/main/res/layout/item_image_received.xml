<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >


    <ImageView
        android:id="@+id/iv_imageSenderProfile"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:src="@drawable/circle_blue"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_image_senderName"
        android:text="John Doe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_imageSenderProfile"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp" />

    <ImageView
        android:id="@+id/iv_imageReceived"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:maxHeight="320dp"
        android:maxWidth="240dp"
        android:adjustViewBounds="true"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_image_senderName"
        app:layout_constraintLeft_toRightOf="@+id/iv_imageSenderProfile"
        android:layout_marginLeft="8dp"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/text_message_time"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_imageReceived"
        app:layout_constraintBottom_toBottomOf="@+id/iv_imageReceived" />

</android.support.constraint.ConstraintLayout>